{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@thingsmanager-nx/common-ui": ["libs/common-ui/src/index.ts"],
      "@thingsmanager-nx/graphql/default-graphql": [
        "libs/graphql/default-graphql/src/index.ts"
      ],
      "@thingsmanager-nx/graphql/metrokia-graphql": [
        "libs/graphql/metrokia-graphql/src/index.ts"
      ],
      "@thingsmanager-nx/store": ["libs/store/src/index.ts"],
      "@thingsmanager-nx/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
